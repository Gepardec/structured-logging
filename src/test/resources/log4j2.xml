<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="warn">

	<Appenders>
		<Console name="ConsoleJSONAppender" target="SYSTEM_OUT">
			<JsonLayout complete="false" compact="false">
				<KeyValuePair key="usedLayout" value="JsonLayout" />
			</JsonLayout>
		</Console>
		<Console name="console" target="SYSTEM_OUT">
			<PatternLayout
				pattern="%d{yyyy-MM-dd HH:mm:ss} %-5p %c{1}:%L usedLayout: PatternLayout - %m%n" />
		</Console>

	</Appenders>
	<Loggers>
	
		<Logger name="org.gepardec.structured_logging.LoggingTest" additivity="false" level="trace">
            <AppenderRef ref="ConsoleJSONAppender" />
            <AppenderRef ref="console"  />
        </Logger>
		
		<Root level="info" additivity="false">
			<appender-ref ref="ConsoleJSONAppender" />
		</Root>
	</Loggers>
</Configuration>